<% layout('boilerplate') -%>
<div class="signup">
<div class="container ">
	<div class="row form-css">
		<div class="col-xs-12 col-sm-7 mx-auto">
			<div class="card mt-1 ">
				<% if(message!=='undefined' && message.length>0) {%>

				<div class="alert alert-danger alert-dismissible fade show" role="alert">
					<%=message%>
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<%}%>
				

				<div class="mx-auto">
					<img src="/img/logo.png" alt="Samanwale" height="100" width="100" class="img-logo"/>
				</div>
				<div class="card-title text-center">
					<h4>Saman<span id="w">Wale</span></h4>
				</div>
				<div class="card-body" >
					<form class="form-group" action="/login" method="post">

						<div class="form-group">
				    	<label for="email">Email</label>
				    	<input type="email" name="email" class="form-control" id="email" placeholder="Enter your Email">
				  	</div>
						<div class="form-group">
				    	<label for="password">Password</label>
				    	<input type="password" name="password" class="form-control" id="password" placeholder="Enter your password">
				  	</div>

						<div class="mx-auto text-center">
							<button type="submit" name="button" class="btn btn-secondary btn-block">Login</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
