<% layout('boilerplate') -%>

<div class="container">
  <div class="row">
    <%for(let i=0;i<products.length;i++){%>
      <div class="col-md-4 mt-2">
        <a href="/product/<%=products[i]._id%>">
          <div class="thumbnail">
            <img src="<%=products[i].image%>" class="img-fluid " alt="products">
            <div class="caption">
              <h3><%=products[i].name%></h3>
              <p><%=products[i].category.name%></p>
              <p>$<%=products[i].price%></p>
            </div>

          </div>
        </a>
      </div>
      <%}%>
  </div>
</div>
